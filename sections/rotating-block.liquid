{% style %}
  .rotating-block-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_sides }}px {{ section.settings.padding_bottom }}px;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
  }

  .rotating-block-{{ section.id }} .section-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    text-align: {{ section.settings.text_alignment }};
    margin: 0 0 20px 0;
    line-height: 1.2;
    font-weight: {{ section.settings.heading_weight }};
  }

  .rotating-block-{{ section.id }} .section-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    text-align: {{ section.settings.text_alignment }};
    margin: 0 0 40px 0;
    line-height: 1.5;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .rotating-block-{{ section.id }} .rotating-container {
    background: {{ section.settings.rotating_bg_color }};
    padding: 40px;
    border-radius: 4px;
    margin: 20px 0;
    text-align: center;
    position: relative;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rotating-block-{{ section.id }} .rotating-content {
    position: relative;
    width: 100%;
  }

  .rotating-block-{{ section.id }} .rotating-item {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    padding: 0 20px;
  }

  .rotating-block-{{ section.id }} .rotating-item.active {
    opacity: 1;
    position: relative;
  }

  .rotating-block-{{ section.id }} .rotating-item-heading {
    font-size: {{ section.settings.rotating_heading_size }}px;
    color: {{ section.settings.rotating_heading_color }};
    font-weight: {{ section.settings.rotating_heading_weight }};
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .rotating-block-{{ section.id }} .rotating-item-text {
    font-size: {{ section.settings.rotating_text_size }}px;
    color: {{ section.settings.rotating_text_color }};
    line-height: 1.5;
    max-width: 800px;
    margin: 0 auto;
  }

  @media screen and (max-width: 768px) {
    .rotating-block-{{ section.id }} {
      padding: {{ section.settings.padding_top | times: 0.8 }}px {{ section.settings.padding_sides | divided_by: 2 }}px {{ section.settings.padding_bottom | times: 0.8 }}px;
    }
    
    .rotating-block-{{ section.id }} .rotating-container {
      padding: 30px;
      min-height: 180px;
    }
    
    .rotating-block-{{ section.id }} .rotating-item-heading {
      font-size: {{ section.settings.rotating_heading_size | times: 0.8 }}px;
    }
    
    .rotating-block-{{ section.id }} .rotating-item-text {
      font-size: {{ section.settings.rotating_text_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .rotating-block-{{ section.id }} .rotating-container {
      padding: 20px;
      min-height: 160px;
    }
    
    .rotating-block-{{ section.id }} .rotating-item-heading {
      font-size: {{ section.settings.rotating_heading_size | times: 0.7 }}px;
    }
    
    .rotating-block-{{ section.id }} .rotating-item-text {
      font-size: {{ section.settings.rotating_text_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="rotating-block-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
  {% endif %}
  
  {% if section.settings.subheading != blank %}
    <div class="section-subheading">{{ section.settings.subheading }}</div>
  {% endif %}
  
  <div class="rotating-container">
    <div class="rotating-content">
      {% for block in section.blocks %}
        <div class="rotating-item {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
          {% if block.settings.heading != blank %}
            <h3 class="rotating-item-heading">{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="rotating-item-text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const rotatingItems = document.querySelectorAll('.rotating-block-{{ section.id }} .rotating-item');
    let currentIndex = 0;
    
    if (rotatingItems.length > 1) {
      setInterval(function() {
        rotatingItems[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % rotatingItems.length;
        rotatingItems[currentIndex].classList.add('active');
      }, {{ section.settings.rotation_speed }});
    }
  });
</script>

