{% style %}
  .banner-{{ section.id }} {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.banner_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_sides }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_sides }}px;
    background-size: cover;
    background-position: center;
  }

  .banner-{{ section.id }} .banner-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    max-width: {{ section.settings.text_width }}%;
    margin: 0;
    line-height: 1.2;
  }

  .banner-{{ section.id }} .banner-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    max-width: {{ section.settings.text_width }}%;
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 768px) {
    .banner-{{ section.id }} {
      min-height: {{ section.settings.banner_height_mobile | default: section.settings.banner_height | times: 0.8 }}px;
      padding: {{ section.settings.padding_top_mobile | default: section.settings.padding_top | divided_by: 1.5 }}px {{ section.settings.padding_sides_mobile | default: section.settings.padding_sides | divided_by: 1.5 }}px {{ section.settings.padding_bottom_mobile | default: section.settings.padding_bottom | divided_by: 1.5 }}px {{ section.settings.padding_sides_mobile | default: section.settings.padding_sides | divided_by: 1.5 }}px;
    }
    
    .banner-{{ section.id }} .banner-heading {
      font-size: {{ section.settings.heading_size_mobile | default: section.settings.heading_size | times: 0.8 }}px;
      max-width: 90%;
    }
    
    .banner-{{ section.id }} .banner-subheading {
      font-size: {{ section.settings.subheading_size_mobile | default: section.settings.subheading_size | times: 0.8 }}px;
      max-width: 90%;
    }
  }

  @media screen and (max-width: 480px) {
    .banner-{{ section.id }} {
      min-height: {{ section.settings.banner_height_mobile | default: section.settings.banner_height | times: 0.7 }}px;
    }
    
    .banner-{{ section.id }} .banner-heading {
      font-size: {{ section.settings.heading_size_mobile | default: section.settings.heading_size | times: 0.7 }}px;
    }
    
    .banner-{{ section.id }} .banner-subheading {
      font-size: {{ section.settings.subheading_size_mobile | default: section.settings.subheading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="banner-{{ section.id }}" style="background-image: url('{{ section.settings.background_image | img_url: '1800x' }}');">
  <h1 class="banner-heading">{{ section.settings.heading }}</h1>
  <p class="banner-subheading">{{ section.settings.subheading }}</p>
</div>

{% schema %}
{
  "name": "Story Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "AE AUTHENTIC EGO"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "FORMULATED DIFFERENTLY."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 300,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Banner Height",
      "default": 500
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Banner Height",
      "info": "Leave empty for automatic scaling",
      "default": 400
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_sides",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Side Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "text_width",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Text Container Width",
      "default": 80
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "Heading Size",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Subheading Size",
      "default": 24
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Mobile Heading Size",
      "info": "Leave empty for automatic scaling",
      "default": 36
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 10,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Mobile Subheading Size",
      "info": "Leave empty for automatic scaling",
      "default": 18
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Font Weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra-bold" }
      ],
      "default": "700"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Story Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}