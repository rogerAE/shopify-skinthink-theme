{{ 'section-meet-tidy-pores.css' | asset_url | stylesheet_tag }}

<div class="meet-tidy-pores-section" style="
  --section-height: {{ section.settings.section_height }}px;
  --bg-color: {{ section.settings.background_color }};
  --text-color: {{ section.settings.text_color }};
  --scroll-speed: {{ section.settings.scroll_speed }}s;
">
  <div class="meet-tidy-pores-container">
    <!-- Image Block with Overlay Text -->
    <div class="image-block">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: '2000x' }}" 
             alt="{{ section.settings.image.alt | escape }}" 
             loading="lazy"
             class="section-image">
      {% else %}
        <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
      {% endif %}
      
      <div class="scrolling-text-container">
        <div class="scrolling-text" style="animation-duration: var(--scroll-speed);">
          {% if section.settings.scrolling_text != blank %}
            {{ section.settings.scrolling_text }}
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Text Block -->
    <div class="text-block">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading" style="font-size: {{ section.settings.heading_size }}px;">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="section-subheading" style="font-size: {{ section.settings.subheading_size }}px;">
          {{ section.settings.subheading }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="section-description" style="font-size: {{ section.settings.description_size }}px;">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="section-button" style="
          background: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
          font-size: {{ section.settings.button_text_size }}px;
        ">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .meet-tidy-pores-section {
    background-color: var(--bg-color);
    color: var(--text-color);
    height: var(--section-height);
    width: 100%;
    overflow: hidden;
  }

  .meet-tidy-pores-container {
    display: flex;
    height: 100%;
    width: 100%;
    position: relative;
  }

  .image-block {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .section-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
    background: #f5f5f5;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .scrolling-text-container {
    position: absolute;
    left: 5%;
    bottom: 10%;
    width: 40%;
    max-height: 60%;
    overflow: hidden;
  }

  .scrolling-text {
    position: absolute;
    width: 100%;
    animation: scrollText linear infinite;
    color: inherit;
    line-height: 1.5;
  }

  @keyframes scrollText {
    0% { transform: translateY(100%); }
    100% { transform: translateY(-100%); }
  }

  .text-block {
    flex: 1;
    padding: 5%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .section-heading {
    color: inherit;
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .section-subheading {
    color: inherit;
    margin-bottom: 20px;
    line-height: 1.3;
  }

  .section-description {
    color: inherit;
    margin: 20px 0;
    line-height: 1.6;
  }

  .section-button {
    display: inline-block;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: opacity 0.3s ease;
    align-self: flex-start;
  }

  .section-button:hover {
    opacity: 0.9;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .meet-tidy-pores-container {
      flex-direction: column;
      height: auto;
    }

    .image-block {
      height: 50vh;
      min-height: 400px;
    }

    .scrolling-text-container {
      left: 0;
      bottom: 0;
      width: 100%;
      max-height: 30%;
      padding: 20px;
      background: rgba(0,0,0,0.5);
    }

    @keyframes scrollText {
      0% { transform: translateY(100%); }
      100% { transform: translateY(-100%); }
    }

    .text-block {
      padding: 20px 20px;
    }
  }

  @media (max-width: 480px) {
    .section-heading {
      font-size: calc({{ section.settings.heading_size }}px * 0.7) !important;
    }

    .section-subheading {
      font-size: calc({{ section.settings.subheading_size }}px * 0.7) !important;
    }

    .section-description {
      font-size: calc({{ section.settings.description_size }}px * 0.7) !important;
    }
    .section-subheading p{
      margin: 0;
    }

    .scrolling-text-container {
      max-height: 40%;
    }
  }
</style>

