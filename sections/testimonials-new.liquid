<style>
  .testimonial-section {
    background-color: var(--bg-color);
    color: var(--text-color);
    width: 100%;
    padding: 60px 0;
  }

  .testimonial-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .section-heading {
    margin-bottom: 40px;
    line-height: 1.2;
  }

  .testimonial-slider {
    position: relative;
    min-height: 200px;
    margin: 40px auto 40px;
    max-width: 800px;
  }

  .testimonial-block {
    transition: opacity 0.5s ease;
  }

  [aria-hidden="true"] {
    display: none !important;
  }

  .star-rating {
    color: gold;
    margin-bottom: 15px;
    letter-spacing: 3px;
  }

  .testimonial-text {
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .reviewer-name {
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-text {
    margin-top: 30px;
    font-weight: bold;
    letter-spacing: 1px;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .testimonial-section {
      padding: 40px 0;
    }

    .section-heading {
      font-size: calc(var(--heading-size, 36px) * 0.8) !important;
      margin-bottom: 30px;
    }

    .testimonial-slider {
      min-height: 180px;
      margin-bottom: 30px;
    }
  }

  @media (max-width: 480px) {
    .section-heading {
      font-size: calc(var(--heading-size, 36px) * 0.7) !important;
    }

    .testimonial-slider {
      min-height: 220px;
    }
  }
</style>