{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

<div class="testimonial-section" style="
  --bg-color: {{ section.settings.background_color }};
  --text-color: {{ section.settings.text_color }};
">
  <div class="testimonial-container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_size }}px;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="testimonial-slider">
      {% for block in section.blocks %}
        <div class="testimonial-block" data-index="{{ forloop.index0 }}" {% unless forloop.first %}aria-hidden="true" style="display: none;"{% endunless %}>
          <div class="star-rating" style="font-size: {{ section.settings.star_size }}px;">
            {% for i in (1..5) %}
              {% if i <= block.settings.rating %}
                ★
              {% else %}
                ☆
              {% endif %}
            {% endfor %}
          </div>
          
          <div class="testimonial-text" style="font-size: {{ section.settings.review_text_size }}px;">
            {{ block.settings.review }}
          </div>
          
          <div class="reviewer-name" style="font-size: {{ section.settings.name_size }}px;">
            {{ block.settings.name }}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.footer_text != blank %}
      <div class="footer-text" style="font-size: {{ section.settings.footer_text_size }}px;">
        {{ section.settings.footer_text }}
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Only run if there are testimonials
    const testimonials = document.querySelectorAll('.testimonial-block');
    if (testimonials.length <= 1) return;

    // Performance-optimized testimonial rotation
    let currentIndex = 0;
    const rotationSpeed = {{ section.settings.rotation_speed | default: 5 }} * 1000;
    
    function rotateTestimonials() {
      // Hide current testimonial
      testimonials[currentIndex].setAttribute('aria-hidden', 'true');
      testimonials[currentIndex].style.display = 'none';
      
      // Move to next testimonial
      currentIndex = (currentIndex + 1) % testimonials.length;
      
      // Show next testimonial
      testimonials[currentIndex].removeAttribute('aria-hidden');
      testimonials[currentIndex].style.display = 'block';
      
      // Schedule next rotation
      setTimeout(rotateTestimonials, rotationSpeed);
    }
    
    // Start rotation with requestAnimationFrame for better performance
    requestAnimationFrame(function() {
      setTimeout(rotateTestimonials, rotationSpeed);
    });
  });
</script>

