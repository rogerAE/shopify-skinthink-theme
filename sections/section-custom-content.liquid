        {% if animations_enabled %}
          data-aos="fade-up"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
          {%- assign animation_delay = animation_delay | plus: 150 -%}
        {% endif %}>{{ title | escape }}</h1>
    {%- endif -%}

    {%- if text != blank -%}
      <div class="featured-image__caption main-text h2"
        {% if animations_enabled %}
          data-aos="fade-up"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
          {%- assign animation_delay = animation_delay | plus: 150 -%}
        {% endif %}>{{ text }}</div>
    {%- endif -%}

    {%- if button_text != blank -%}
      <div class="featured-image__buttons main-buttons">
        <div class="main-buttons__item"
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
          {% endif %}>
          <a class="btn {{ button_style }} {{ button_size }} {{ button_color }} {{ button_advanced_class }} call-to-action" href="{{ button_link }}">
            <hover-button></hover-button>
            {{- button_text | escape -}}
          </a>
        </div>
      </div>
    {%- endif -%}
  </div>
</div></div>

                  {%- when 'text' -%}
                    {%- liquid
                      assign top_image = block.settings.top_image
                      assign top_image_width = block.settings.top_image_width
                    -%}

                    {%- render 'rich-text',
                      block_id: unique,
                      text_position: text_position,
                      top_image: top_image,
                      top_image_width: top_image_width,
                      subheading: subheading,
                      heading: title,
                      heading_size: heading_size,
                      text: text,
                      text_size: text_size,
                      button_text: button_text,
                      button_link: button_link,
                      button_style: button_style,
                      button_color: button_color,
                      button_size: button_size,
                      button_2_text: button_2_text,
                      button_2_link: button_2_link,
                      button_2_style: button_2_style,
                      button_2_color: button_2_color,
                      button_2_size: button_2_size,
                      animation_anchor: animation_anchor,
                      block_bg_color: block_bg_color
                    -%}

                  {%- when 'newsletter' -%}
                    {%- style -%}
                      #BrickBlock--{{ unique }} .main-text { --adjust-body: calc(var(--FONT-ADJUST-BODY) * {{ text_size }}) }
                      #BrickBlock--{{ unique }} .main-heading { --adjust-heading: calc(var(--FONT-ADJUST-HEADING) * {{ heading_size }}) }
                    {%- endstyle -%}

                    <div class="brick__newsletter">
                      {%- if title != blank -%}
                        <h2 class="main-heading"
                          {% if animations_enabled %}
                            data-aos="fade-up"
                            data-aos-anchor="{{ animation_anchor }}"
                            data-aos-delay="{{ animation_delay }}"
                            {%- assign animation_delay = animation_delay | plus: 150 -%}
                          {% endif %}
                        >
                          {{ title | escape }}
                        </h2>
                      {%- endif -%}

                      {%- if text != blank -%}
                        <div class="main-text"
                          {% if animations_enabled %}
                            data-aos="fade-up"
                            data-aos-anchor="{{ animation_anchor }}"
                            data-aos-delay="{{ animation_delay }}"
                            {%- assign animation_delay = animation_delay | plus: 150 -%}
                          {% endif %}
                        >
                          {{- text -}}
                        </div>
                      {%- endif -%}

                      <div
                        {% if animations_enabled %}
                          data-aos="fade-up"
                          data-aos-anchor="{{ animation_anchor }}"
                          data-aos-delay="{{ animation_delay }}"
                        {% endif %}
                      >
                        {%- render 'newsletter-form', unique: section.id -%}
                      </div>
                    </div>

                  {%- when 'testimonial' -%}
                    {%- assign text_alignment = block.settings.text_alignment -%}

                    {{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

                    <div class="brick__testimonial text-{{ text_alignment }}">
                      {%- render 'testimonial-item',
                        block: block,
                        animations_enabled: animations_enabled,
                        animation_anchor: animation_anchor,
                        animation_delay: animation_delay
                      -%}
                    </div>

                  {%- when 'product' -%}
                    {%- assign product = all_products[block.settings.product] -%}

                    <div
                      class="brick__product"
                      {% if animations_enabled %}
                        data-aos="fade-left"
                        data-aos-anchor="{{ animation_anchor }}"
                        data-aos-delay="{{ animation_delay }}"
                      {% endif %}
                    >
                      {%- if title != blank -%}
                        <p class="brick__subheading subheading-text">{{ title }}</p>
                      {%- endif -%}

                      {%- liquid
                        if product != blank
                          assign img_width_sm_pgi = 'calc((100vw - ' | append: mobile_space | append: 'px) - 60px)'
                          assign sizes_pgi = '(min-width: 1440px) ' | append: img_width_xlg_pgi | append: ', (min-width: 1024px) ' | append: img_width_lg_pgi | append: ', (min-width: 768px) ' | append: img_width_md_pgi | append: ', ' | append: img_width_sm_pgi

                          render 'product-grid-item', product: product, index: forloop.index, animation_anchor: animation_anchor, sizes: sizes_pgi
                        else
                          render 'product-grid-item--onboarding', placeholder_index: forloop.index, index: forloop.index, animation_anchor: animation_anchor
                        endif
                      -%}
                    </div>

                  {%- when 'video' -%}
                    {%- liquid
                      assign video_id = block.settings.video_link.id
                      assign video_link = block.settings.video_link
                      assign background_video = block.settings.video_link_bg
                      assign text = block.settings.video_text
                      assign video_size = block.settings.video_size

                      capture video_class
                        echo 'brick__video '
                        echo 'brick__video--' | append: video_size

                        if video_size != 'video-fit'
                          echo ' ' | append: section_height

                          if enable_mobile_height
                            echo ' ' | append: mobile_height
                          endif
                        endif
                      endcapture
                    -%}

                    {%- style -%}
                      #BrickBlock--{{ unique }} .main-text { --adjust-body: calc(var(--FONT-ADJUST-BODY) * {{ text_size }}) }
                    {%- endstyle -%}

                    {{ 'section-video.css' | asset_url | stylesheet_tag }}

                    <div class="{{ video_class }}">
                      <div class="video-wrapper" data-video-wrapper>
                        {%- render 'video',
                          unique: unique,
                          text_color: text_color,
                          overlay_opacity: overlay_opacity,
                          title: title,
                          title_highlights: false,
                          heading_size: heading_size,
                          text: text,
                          image: image,
                          image_sizes: sizes,
                          button_text: button_text,
                          button_link: button_link,
                          button_style: button_style,
                          button_color: button_color,
                          button_size: button_size,
                          text_position: text_position,
                          show_text_shadow: show_text_shadow,
                          animations_enabled: animations_enabled,
                          animation_anchor: animation_anchor,
                          animation_delay: animation_delay,
                          background_video: background_video,
                          video_id: video_id,
                          video_link: video_link,
                          video_size: video_size
                        -%}
                      </div>
                    </div>

                  {%- when 'collection' -%}
                    {%- assign collection = collections[block.settings.collection] -%}

                    {%- if title != blank -%}
                      <p
                        class="brick__subheading subheading-text"
                        {% if animations_enabled %}
                          data-aos="fade-up"
                          data-aos-anchor="{{ animation_anchor }}"
                          data-aos-delay="{{ animation_delay }}"
                        {% endif %}
                      >
                        {{ title }}
                      </p>
                    {%- endif -%}

                    <div class="brick__collection" data-slider="slider-{{ unique }}">
                      {%- liquid
                        assign img_width_sm_pgi = 'calc(((100vw - ' | append: mobile_space | append: 'px) * 0.9) - 20px)'
                        assign sizes_pgi = '(min-width: 1440px) ' | append: img_width_xlg_pgi | append: ', (min-width: 1024px) ' | append: img_width_lg_pgi | append: ', (min-width: 768px) ' | append: img_width_md_pgi | append: ', ' | append: img_width_sm_pgi
                        if collection.products.size > 0
                          for product in collection.products limit: 5
                            render 'product-grid-item', product: product, index: forloop.index, animation_delay: forloop.index, animation_anchor: animation_anchor, carousel: true, sizes: sizes_pgi
                          endfor
                        else
                          for i in (1..5)
                            render 'product-grid-item--onboarding', placeholder_index: forloop.index, index: forloop.index, animation_delay: forloop.index, animation_anchor: animation_anchor, carousel: true
                          endfor
                        endif
                      -%}
                    </div>
                {%- endcase -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- render 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
</section>

