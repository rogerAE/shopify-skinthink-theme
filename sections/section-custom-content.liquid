<!-- /sections/section-custom-content.liquid -->
{%- liquid
  assign section_width = section.settings.width
  assign animations_enabled = settings.animations_enabled
  assign bg_color = section.settings.bg_color
  assign section_height = section.settings.height
  assign enable_mobile_height = section.settings.enable_mobile_height
  assign mobile_height = section.settings.mobile_height
  assign add_gutter = section.settings.add_gutter
  assign show_text_shadow = settings.show_text_shadow
  assign blocks_count = section.blocks.size

  comment
    Images sizes
  endcomment
  assign desktop_space = 120
  assign tablet_space = 40
  assign mobile_space = 40
  if add_gutter and blocks_count > 1
    assign desktop_space = desktop_space | plus: 20
    assign tablet_space = tablet_space | plus: 20
  endif

  case section_width
    when 'wrapper--full'
      assign wrapper_width = '100vw'
      assign desktop_space = 0
      assign tablet_space = 0
      assign mobile_space = 0
      if add_gutter
        assign desktop_space = 40
        assign tablet_space = 40
        assign mobile_space = 40
        if blocks_count > 1
          assign desktop_space = desktop_space | plus: 20
          assign tablet_space = tablet_space | plus: 20
        endif
      endif
    when 'wrapper--full-padded'
      assign wrapper_width = '100vw'
    when 'wrapper'
      assign wrapper_width = '1440px'
    when 'wrapper--narrow'
      assign wrapper_width = '840px'
  endcase

  assign img_width_xlg_pgi = 'min(calc(((' | append: wrapper_width | append: ' - ' | append: desktop_space | append: 'px) / ' | append: blocks_count | append: ') - 60px), 25vw)'
  assign img_width_lg = 'calc((' | append: wrapper_width | append: ' - ' | append: desktop_space | append: 'px) / ' | append: blocks_count | append: ')'
  assign img_width_lg_pgi = 'min(calc(((' | append: wrapper_width | append: ' - ' | append: desktop_space | append: 'px) / ' | append: blocks_count | append: ') - 60px), 25vw)'
  assign img_width_md = 'calc((100vw - ' | append: tablet_space | append: 'px) / ' | append: blocks_count | append: ')'
  assign img_width_md_pgi = 'min(calc(((' | append: wrapper_width | append: ' - ' | append: tablet_space | append: 'px) / ' | append: blocks_count | append: ') - 60px), 33vw)'
  assign img_width_sm = 'calc(100vw - ' | append: mobile_space | append: 'px)'

  assign sizes = '(min-width: 1024px) ' | append: img_width_lg | append: ', (min-width: 768px) ' | append: img_width_md | append: ', ' | append: img_width_sm
-%}

{{ 'section-custom-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #brick-section--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;

    {% if bg_color.alpha != 0.0 and bg_color != '' -%}
      --bg: {{ bg_color }};
    {%- endif %}
  }
{%- endstyle -%}

<section
  id="brick-section--{{ section.id }}"
  class="section-padding brick__section"
  data-section-id="{{ section.id }}"
  data-section-type="custom-content"
>
  <div class="brick__section__wrapper {{ section_width }} {{ section_height }}{% if enable_mobile_height %} {{ mobile_height }}{% endif %}">
    <div class="brick__blocks__flex brick__blocks__flex--{% if add_gutter %}gap{% else %}stuck{% endif %}{% if section.settings.reverse_blocks %} brick__blocks__flex--reverse{% endif %}">
      {%- if blocks_count > 0 -%}
        {%- for block in section.blocks -%}
          {%- liquid
            assign unique = block.id
            assign index = forloop.index0
            assign block_type = block.type
            assign animation_anchor = '#BrickBlock--' | append: unique
            assign animation_delay = 150
            assign image = block.settings.image
            assign button_text = block.settings.button_text
            assign button_link = block.settings.button_link | default: '#!'
            assign button_style = block.settings.button_style
            assign button_color = block.settings.button_color
            assign button_size = block.settings.button_size
            comment
              theme-check-disable VariableName
            endcomment
            assign button_2_text = block.settings.button_2_text
            assign button_2_link = block.settings.button_2_link | default: '#!'
            assign button_2_style = block.settings.button_2_style
            assign button_2_color = block.settings.button_2_color
            assign button_2_size = block.settings.button_2_size
            assign text_color = block.settings.text_color
            assign block_bg_color = block.settings.bg_color | default: ''
            assign title = block.settings.title
            assign text = block.settings.text
            assign heading_size = block.settings.heading_size | times: 0.01
            assign text_size = block.settings.text_size | times: 0.01
            assign subheading = block.settings.subheading
            assign text_position = block.settings.text_position
            assign overlay_opacity = block.settings.overlay_opacity | times: 0.01
            assign block_full_rounded = false
            assign prev_block_transparent_not_media = false
            assign next_block_transparent_not_media = false

            if block_type == 'image' or block_type == 'video'
              case index
                when 0
                  assign next_block = section.blocks[1]
                  assign next_block_bg_color = next_block.settings.bg_color
                  if next_block.type != 'video' and next_block.type != 'image'
                    unless next_block_bg_color.alpha != 0.0 and next_block_bg_color != '' and next_block_bg_color != bg_color
                      assign next_block_transparent_not_media = true
                    endunless
                  endif
                when 1
                  assign prev_block = section.blocks[0]
                  assign prev_block_bg_color = prev_block.settings.bg_color
                  if prev_block.type != 'video' and prev_block.type != 'image'
                    unless prev_block_bg_color.alpha != 0.0 and prev_block_bg_color != '' and prev_block_bg_color != bg_color
                      assign prev_block_transparent_not_media = true
                    endunless
                  endif
              endcase
            endif

            if prev_block_transparent_not_media or next_block_transparent_not_media
              assign block_full_rounded = true
            endif

            capture style
              if block_bg_color != 'rgba(0,0,0,0)' and block_bg_color != ''
                echo 'style="background-color: ' | append: block_bg_color | append: ';"'
              else
                assign block_bg_color = bg_color
              endif
            endcapture
          -%}
          <div
            id="BrickBlock--{{ unique }}"
            class="brick__block brick__block--{{ block_type }}{% if text_color != blank %}{% if block_full_rounded %} brick__block--rounded{% endif %} {{ text_color }}{% endif %}"
            {{ style }}
            {{ block.shopify_attributes }}
          >
            <div class="brick__block__content">
              <div class="brick__block__inner">
                {%- case block_type -%}
                  {%- when 'image' -%}
                    {%- liquid
                      assign text = block.settings.image_text

                      if block.settings.button_link != blank or block.settings.button_text != blank
                        assign hover_scale = ' hover-scale'
                      endif

                      capture image_class
                        echo 'brick__image '
                        echo section_height

                        if enable_mobile_height
                          echo ' ' | append: mobile_height
                        endif

                        echo ' align--' | append: text_position

                        unless image
                          echo ' img-in'
                        endunless

                        echo hover_scale
                      endcapture
                    -%}
                    {%- style -%}
                      #BrickBlock--{{ unique }} .main-text { --adjust-body: calc(var(--FONT-ADJUST-BODY) * {{ text_size }}) }
                    {%- endstyle -%}

                    <div
                      class="{{ image_class }}"
                      id="FeaturedImage--{{ section.id }}--{{ unique }}"
                      {% if animations_enabled %}
                        data-aos="zoom-out"
                        data-aos-anchor="{{ animation_anchor }}"
                        data-aos-delay="{{ animation_delay }}"
                      {% endif %}
                    >{%- style -%}
  #FeaturedImage--{{ section.id }}--{{ block.id }} { --overlay-opacity: {{ overlay_opacity }}; }
  #FeaturedImage--{{ section.id }}--{{ block.id }} .main-heading { --adjust-heading: calc(var(--FONT-ADJUST-HEADING) * {{ heading_size }}) }
{%- endstyle -%}

{%- liquid
  assign button_advanced_class = 'btn--advanced'
  if button_style != 'btn--text'
    assign button_advanced_class = button_advanced_class | append: ' btn--advanced-width-height'
  endif
-%}

{%- if button_text == blank and button_link != '#!' -%}
  <a class="featured-image__link" href="{{ button_link }}">
    <span class="visually-hidden">{{ title | strip_html | strip }}</span>
  </a>
{%- endif -%}

{%- render 'image-fill', is_background: true, img_object: image, sizes: sizes, classes: 'featured-image__bg' -%}

<div class="overlay"></div>

<div class="featured-image__content">
  <div class="featured-image__content-inner{% if show_text_shadow %} backdrop--radial{% endif %}">
    {%- if title != blank -%}
