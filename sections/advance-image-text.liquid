{%- style -%}
  .image-text-columns {
    padding: {{ section.settings.section_padding }}px 0;
    background-color: {{ section.settings.background_color }};
  }
  
  .image-text-columns .text-content {
    color: {{ section.settings.text_color }};
  }

  .image-text-columns .heading {
    font-size: {{ section.settings.heading_size }}px;
  }

  .image-text-columns .rte {
    font-size: {{ section.settings.text_size }}px;
  }

  .image-text-columns .button {
    font-size: {{ section.settings.button_text_size }}px;
  }
{%- endstyle -%}

<div class="image-text-columns">
  <div class="page-width">
    <div class="columns-wrapper {% if section.settings.image_position == 'right' %}image-right{% endif %}">
      <!-- Image Column -->
      <div class="image-column">
        {%- if section.settings.image -%}
          {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="image lazyload"
               data-src="{{ img_url }}"
               data-widths="[400, 600, 800, 1000, 1200, 1600]"
               data-aspectratio="{{ section.settings.image.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.image.alt | escape }}"
               loading="lazy">
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      
      <!-- Text Column -->
      <div class="text-column">
        <div class="text-content">
          {%- if section.settings.heading != blank -%}
            <h2 class="heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if section.settings.text != blank -%}
            <div class="rte">{{ section.settings.text }}</div>
          {%- endif -%}
          
          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="button">
              {{ section.settings.button_text }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Base Layout - 1600px width */
  .page-width {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .columns-wrapper {
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .image-column,
  .text-column {
    flex: 1;
    width: 50%;
  }

  /* Image Styles */
  .image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 4px;
    max-width: 100%;
  }

  /* Text Styles */
  .text-content {
    padding: 30px;
  }

  .heading {
    margin-bottom: 20px;
    line-height: 1.3;
  }

  .rte {
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .rte p {
    margin-bottom: 15px;
  }

  .button {
    display: inline-block;
    padding: 14px 35px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* Right Image Variation */
  .image-right {
    flex-direction: row-reverse;
  }

  /* Responsive Breakpoints */
  @media (max-width: 1200px) {
    .page-width {
      padding: 0 30px;
    }
    .columns-wrapper {
      gap: 40px;
    }
  }

  @media (max-width: 992px) {
    .text-content {
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .columns-wrapper {
      flex-direction: column;
      gap: 30px;
    }

    .image-column,
    .text-column {
      width: 100%;
    }

    .text-content {
      padding: 0;
      text-align: center;
    }

    .button {
      width: auto;
    }
  }

  @media (max-width: 480px) {
    .page-width {
      padding: 0 20px;
    }
    .heading {
      font-size: calc({{ section.settings.heading_size }}px * 0.70) !important;
    }
    .rte {
      font-size: calc({{ section.settings.text_size }}px * 0.75) !important;
    }
  }
</style>

{% schema %}
{
  "name": "Image + Text Columns",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section Padding",
      "min": 20,
      "max": 150,
      "step": 5,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image with text"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 16,
      "max": 72,
      "step": 1,
      "default": 42,
      "unit": "px"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post.</p>"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "label": "Button Text Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Image + Text Columns",
      "category": "Image"
    }
  ]
}
{% endschema %}