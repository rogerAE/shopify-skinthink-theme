{% liquid
  assign min = 1
  assign max = 10000
  assign diff = max | minus: min
  assign randomNumber = 'now' | date: '%N' | modulo: diff | plus: min
%}

{%- style -%}
  #cc{{ randomNumber }}.custom-columns {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.section_padding }}px 0;
  }

  #cc{{ randomNumber }}.custom-columns .custom-grid {
    grid-template-columns: repeat({{section.blocks.size | at_most: 4}}, 1fr);
  }

  {% assign modulo = section.blocks.size | modulo: 2 %}

  @media only screen and (max-width: 820px) {
    {%- if modulo > 0 -%}
      #cc{{ randomNumber }}.custom-columns .custom-grid {
        grid-template-columns: repeat({{section.blocks.size | at_most: 1}}, 1fr);
      }
    {%- endif -%}

    {%- if modulo == 0 -%}
      #cc{{ randomNumber }}.custom-columns .custom-grid {
        grid-template-columns: repeat({{section.blocks.size | at_most: 1}}, 1fr);
      }
    {%- endif -%}
  }

  #cc{{ randomNumber }}.custom-columns .custom-header-wrapper {
    max-width: 1100px;
    margin-bottom: 70px;
    margin-left: auto;
    margin-right: auto;
  }

  #cc{{ randomNumber }} .header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  #cc{{ randomNumber }} .section-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    margin-bottom: {{ section.settings.subheading_spacing }}px;
  }

  #cc{{ randomNumber }} .section-description {
    font-size: {{ section.settings.description_size }}px;
    margin-bottom: {{ section.settings.description_spacing }}px;
  }

  #cc{{ randomNumber }} .section-button {
    font-size: {{ section.settings.button_text_size }}px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    display: inline-block;
    border-radius: {{ section.settings.button_border_radius }}px;
    margin-top: {{ section.settings.button_spacing }}px;
  }

  @media (max-width: 768px) {
    #cc{{ randomNumber }}.custom-columns {
      padding: {{ section.settings.section_padding_mobile }}px 0;
    }
    
    #cc{{ randomNumber }} .section-subheading {
      font-size: calc({{ section.settings.subheading_size }}px * 0.9);
    }
    
    #cc{{ randomNumber }} .section-description {
      font-size: calc({{ section.settings.description_size }}px * 0.9);
    }
  }
{%- endstyle -%}

<div
  id='cc{{ randomNumber }}'
  class='custom-columns index-section{% if section.settings.alt %} index-section--alt{% endif %}'
>
  <div class='page-width' data-aos>
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class='custom-header-wrapper'>
        <div class="header-content text-{{ section.settings.align_text }}">
          {%- if section.settings.title != blank -%}
            <h1 class='appear-delay-1 custom-columns-title'>
              {{ section.settings.title }}
            </h1>
          {%- endif -%}

          {%- if section.settings.subheading != blank -%}
            <div class='section-subheading appear-delay-2'>
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}

          {%- if section.settings.description != blank -%}
            <div class='section-description appear-delay-3'>
              {{ section.settings.description }}
            </div>
          {%- endif -%}

          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="section-button appear-delay-4">
              {{ section.settings.button_text }}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    <div class='custom-grid text-{{ section.settings.align_text }}'>
      {%- for block in section.blocks -%}
        <div
          {{ block.shopify_attributes }}
          data-aos
          class='custom-grid-item appear-delay-2 {{ section.settings.align_text }}'
        >
          {%- if block.settings.enable_image -%}
            {%- if block.settings.image != blank -%}
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img
                class='lazyload'
                data-src='{{ img_url }}'
                data-widths='[180, 360, 540, 750, 900, 1080]'
                data-aspectratio='{{ block.settings.image.aspect_ratio }}'
                data-sizes='auto'
                style='width: {{ block.settings.image_width }}px;'
                alt='{{ block.settings.image.alt }}'
              >
            {%- else -%}
              <div class='image-wrap'>{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
            {%- endif -%}
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <div class='h3'>{{ block.settings.title }}</div>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            {{ block.settings.text }}
          {%- endif -%}

          {% render 'bullet-list', block: block %}

          {%- if block.settings.secondary_text != blank -%}
            <div class='rte-setting'>{{ block.settings.secondary_text }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

