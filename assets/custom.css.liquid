.custom-columns .custom-header-wrapper {
    display: grid;
    row-gap: 33px;
}

.custom-columns .custom-columns-title {
    margin: 0px;
}

.custom-columns .custom-columns-description p:last-of-type {
    margin: 0px;
}

.custom-columns .custom-grid {
    display: grid;
    grid-auto-flow: dense;
    column-gap: 40px;
    row-gap: 40px;
}

.custom-columns .custom-grid .custom-grid-item {
    display: grid;
    row-gap: 35px;
    align-content: start;
}

.custom-columns .custom-grid .custom-grid-item.center {
    justify-items: center;
}

.custom-columns .custom-grid .custom-grid-item .h3 {
    margin: 0px;
}

.custom-columns .custom-grid .custom-grid-item p {
    margin: 0px;
}

header.site-header {
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
}

header.site-header.temp-hidden {
    opacity: 0 !important;
    position: unset !important;
}

header.site-header.site-header--sticky {
    opacity: 0;
}

header.site-header.site-header--sticky.visible {
    opacity: 1;
}

