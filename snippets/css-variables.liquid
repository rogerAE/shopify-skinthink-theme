{%- liquid
  comment
    Fonts
  endcomment

  assign heading_font = settings.type_heading_font
  assign base_font = settings.type_base_font
  assign nav_font = settings.type_nav_font
  assign button_font = settings.type_button_font
  assign subheading_font = settings.type_subheadings_font
  assign label_font = settings.type_labels_font
  assign label_font_weight = settings.label_font_weight
  assign button_font_weight = settings.button_font_weight
  assign highlight_font = settings.type_highlight_font

  assign base_font_light = base_font | font_modify: 'weight', 'lighter'
  assign base_font_medium = base_font | font_modify: 'weight', 'bolder'
  assign base_font_bold = base_font | font_modify: 'weight', 'bold'
  assign base_font_italic = base_font | font_modify: 'style', 'italic'
  assign base_font_bold_italic = base_font_bold | font_modify: 'style', 'italic'

  assign base_font_100 = base_font | font_modify: 'weight', '+100'
  assign base_font_200 = base_font | font_modify: 'weight', '+200'
  assign base_font_300 = base_font | font_modify: 'weight', '+300'
  assign base_font_400 = base_font | font_modify: 'weight', '+400'
  if base_font_100 and base_font_100.weight > base_font.weight
    assign base_font_bold = base_font_100
  elsif base_font_200 and base_font_200.weight > base_font.weight
    assign base_font_bold = base_font_200
  elsif base_font_300 and base_font_300.weight > base_font.weight
    assign base_font_bold = base_font_300
  elsif base_font_400 and base_font_400.weight > base_font.weight
    assign base_font_bold = base_font_400
  endif

  assign heading_font_light = heading_font | font_modify: 'weight', 'lighter'
  assign heading_font_medium = heading_font | font_modify: 'weight', 'bolder'
  assign heading_font_bold = heading_font | font_modify: 'weight', 'bold'
  assign heading_font_italic = heading_font | font_modify: 'style', 'italic'

  assign heading_font_100 = heading_font | font_modify: 'weight', '+100'
  assign heading_font_200 = heading_font | font_modify: 'weight', '+200'
  assign heading_font_300 = heading_font | font_modify: 'weight', '+300'
  assign heading_font_400 = heading_font | font_modify: 'weight', '+400'
  if heading_font_100 and heading_font_100.weight > heading_font.weight
    assign heading_font_bold = heading_font_100
  elsif heading_font_200 and heading_font_200.weight > heading_font.weight
    assign heading_font_bold = heading_font_200
  elsif heading_font_300 and heading_font_300.weight > heading_font.weight
    assign heading_font_bold = heading_font_300
  elsif heading_font_400 and heading_font_400.weight > heading_font.weight
    assign heading_font_bold = heading_font_400
  endif

  assign subheading_font_light = subheading_font | font_modify: 'weight', 'lighter'
  assign subheading_font_bold = subheading_font | font_modify: 'weight', 'bold'
  assign subheading_font_medium = subheading_font | font_modify: 'weight', 'bolder'
  assign subheading_font_italic = subheading_font | font_modify: 'style', 'italic'

  assign subheading_font_100 = subheading_font | font_modify: 'weight', '+100'
  assign subheading_font_200 = subheading_font | font_modify: 'weight', '+200'
  assign subheading_font_300 = subheading_font | font_modify: 'weight', '+300'
  assign subheading_font_400 = subheading_font | font_modify: 'weight', '+400'
  if subheading_font_100 and subheading_font_100.weight > subheading_font.weight
    assign subheading_font_bold = subheading_font_100
  elsif subheading_font_200 and subheading_font_200.weight > subheading_font.weight
    assign subheading_font_bold = subheading_font_200
  elsif subheading_font_300 and subheading_font_300.weight > subheading_font.weight
    assign subheading_font_bold = subheading_font_300
  elsif subheading_font_400 and subheading_font_400.weight > subheading_font.weight
    assign subheading_font_bold = subheading_font_400
  endif

  if nav_font == 'heading'
    assign nav_font = heading_font
    assign nav_font_light = heading_font_light
    assign nav_font_medium = heading_font_medium
    assign nav_font_bold = heading_font_bold
    assign nav_font_italic = heading_font_italic
  else
    assign nav_font = base_font
    assign nav_font_light = base_font_light
    assign nav_font_medium = base_font_medium
    assign nav_font_bold = base_font_bold
    assign nav_font_italic = base_font_italic
  endif

  if label_font == 'heading'
    assign label_font = heading_font
    assign label_font_light = heading_font_light
    assign label_font_bold = heading_font_bold
  elsif label_font == 'subheading'
    assign label_font = subheading_font
    assign label_font_light = subheading_font_light
    assign label_font_bold = subheading_font_bold
  else
    assign label_font = base_font
    assign label_font_light = base_font_light
    assign label_font_bold = base_font_bold
  endif

  case label_font_weight
    when 'normal'
      assign label_font_weight = label_font.weight | default: 400
    when 'light'
      assign label_font_weight = label_font_light.weight | default: 300
    when 'bold'
      assign label_font_weight = label_font_bold.weight | default: 600
  endcase

  if button_font == 'heading'
    assign button_font = heading_font
    assign button_font_light = heading_font_light
    assign button_font_medium = heading_font_medium
    assign button_font_bold = heading_font_bold
    assign button_font_italic = heading_font_italic
  elsif button_font == 'body'
    assign button_font = base_font
    assign button_font_light = base_font_light
    assign button_font_medium = base_font_medium
    assign button_font_bold = base_font_bold
    assign button_font_italic = base_font_italic
  else
    assign button_font = subheading_font
    assign button_font_light = subheading_font_light
    assign button_font_medium = subheading_font_medium
    assign button_font_bold = subheading_font_bold
    assign button_font_italic = subheading_font_italic
  endif

  case button_font_weight
    when 'normal'
      assign button_font_weight = button_font.weight | default: 400
    when 'light'
      assign button_font_weight = button_font_light.weight | default: 300
    when 'bold'
      assign button_font_weight = button_font_bold.weight | default: 700
  endcase

  assign input_font_size = settings.text_size | divided_by: 100.0 | append: 'rem'
  if settings.text_size < 100
    assign input_font_size = '1rem'
  endif

  assign btn_text_caps = 'none'
  if settings.button_caps
    assign btn_text_caps = 'uppercase'
  endif

  assign heading_text_caps = 'none'
  if settings.heading_caps
    assign heading_text_caps = 'uppercase'
  endif

  assign subheading_text_caps = 'none'
  if settings.subheading_caps
    assign subheading_text_caps = 'uppercase'
  endif

  assign label_text_caps = 'none'
  if settings.label_caps
    assign label_text_caps = 'uppercase'
  endif

  comment
    Colors
  endcomment

  assign color_white = '#ffffff'
  assign color_black = '#000000'

  assign color_white_darken_5 = color_white | color_darken: 5
  assign color_white_alpha_10 = color_white | color_modify: 'alpha', 0.10
  assign color_white_alpha_20 = color_white | color_modify: 'alpha', 0.20
  assign color_white_alpha_25 = color_white | color_modify: 'alpha', 0.25
  assign color_white_alpha_50 = color_white | color_modify: 'alpha', 0.50
  assign color_white_alpha_60 = color_white | color_modify: 'alpha', 0.60

  assign color_black_lighten_10 = color_black | color_lighten: 10
  assign color_black_alpha_05 = color_black | color_modify: 'alpha', 0.05
  assign color_black_alpha_10 = color_black | color_modify: 'alpha', 0.10
  assign color_black_alpha_20 = color_black | color_modify: 'alpha', 0.20
  assign color_black_alpha_25 = color_black | color_modify: 'alpha', 0.25
  assign color_black_alpha_50 = color_black | color_modify: 'alpha', 0.50
  assign color_black_alpha_60 = color_black | color_modify: 'alpha', 0.60

  assign color_body_bg = settings.color_body_bg
  if color_body_bg == 'rgba(0,0,0,0)'
    assign color_body_bg = 'rgba(255, 255, 255, 1)'
  endif

  assign color_body_text = settings.color_body_text
  assign color_body_text_brightness = color_body_text | color_brightness | round
  if color_body_text == 'rgba(0,0,0,0)'
    assign color_body_text = 'rgba(0,0,0,1)'
  endif

  assign color_accent = settings.color_accent
  assign color_accent_text = '#fff'
  assign color_accent_brightness = color_accent | color_brightness | round
  if color_accent_brightness > 204
    assign color_accent_text = '#000'
  endif

  assign color_border = settings.color_borders_and_lines
  assign color_border_bg_brightness = color_border | color_brightness | round
  if color_border_bg_brightness > 153
    assign color_border_lighten_darken = color_border | color_darken: 30
  else
    assign color_border_lighten_darken = color_border | color_lighten: 30
  endif

  assign color_body_bg_brightness = color_body_bg | color_brightness | round
  if color_body_bg_brightness > 153
    assign color_body_bg_lighten_darken = color_body_bg | color_darken: 10
    assign color_body_bg_lighten_darken_shimmer_bg = color_body_bg | color_darken: 2
    assign color_body_bg_lighten_darken_shimmer_effect = color_body_bg | color_darken: 4
    assign color_body_bg_lighten_darken_shimmer_enhancement = color_body_bg | color_darken: 100
    assign color_body_bg_lighten_darken_foreground = color_body_bg | color_darken: 3
    assign color_body_bg_lighten_darken_search_loader_line = color_body_bg | color_darken: 10
    assign color_body_bg_lighten_darken_search_loader = color_body_bg | color_darken: 20
    assign color_body_bg_lighten_darken_contrast = color_body_bg | color_darken: 30
    assign color_body_bg_lighten_darken_contrast_2 = color_body_bg | color_darken: 35
    assign color_body_bg_lighten_darken_contrast_3 = color_body_bg | color_darken: 40
    assign color_body_bg_lighten_darken_contrast_4 = color_body_bg | color_darken: 45
    assign color_body_bg_lighten_darken_contrast_5 = color_body_bg | color_darken: 50
    assign color_body_bg_lighten_darken_contrast_6 = color_body_bg | color_darken: 55
    assign color_body_bg_lighten_darken_highlight = color_body_bg | color_darken: 15
    if color_body_text_brightness > 153
      assign color_body_bg_lighten_darken_highlight = color_body_bg_lighten_darken_highlight | color_modify: 'alpha', 0.15
    endif
    comment
      Show black for light backgrounds and vice versa
    endcomment
    assign color_black_white = '#000'
    comment
      Show white for light backgrounds and vice versa
    endcomment
    assign color_white_black = '#fff'
  else
    assign color_body_bg_lighten_darken = color_body_bg | color_lighten: 10
    assign color_body_bg_lighten_darken_shimmer_bg = color_body_bg | color_lighten: 5
    assign color_body_bg_lighten_darken_shimmer_effect = color_body_bg | color_lighten: 7
    assign color_body_bg_lighten_darken_shimmer_enhancement = color_body_bg | color_lighten: 100
    assign color_body_bg_lighten_darken_foreground = color_body_bg | color_lighten: 10
    assign color_body_bg_lighten_darken_search_loader_line = color_body_bg | color_lighten: 10
    assign color_body_bg_lighten_darken_search_loader = color_body_bg | color_lighten: 20
    assign color_body_bg_lighten_darken_contrast = color_body_bg | color_lighten: 30
    assign color_body_bg_lighten_darken_contrast_2 = color_body_bg | color_lighten: 35
    assign color_body_bg_lighten_darken_contrast_3 = color_body_bg | color_lighten: 40
    assign color_body_bg_lighten_darken_contrast_4 = color_body_bg | color_lighten: 45
    assign color_body_bg_lighten_darken_contrast_5 = color_body_bg | color_lighten: 50
    assign color_body_bg_lighten_darken_contrast_6 = color_body_bg | color_lighten: 55
    assign color_black_white = '#fff'
    assign color_white_black = '#000'
    assign color_body_bg_lighten_darken_highlight = color_body_bg | color_lighten: 15
    if color_body_text_brightness <= 153
      assign color_body_bg_lighten_darken_highlight = color_body_bg_lighten_darken_highlight | color_modify: 'alpha', 0.15
    endif
  endif

  assign color_accent_mix = color_accent | color_mix: color_black_white, 50
  assign color_accent_mix_brightness = color_accent_mix | color_brightness | round
  if color_accent_mix_brightness >= 117
    assign color_accent_mix_alpha = color_accent_mix | color_modify: 'alpha', 0.25
  else
    assign color_accent_mix_alpha = color_accent_mix | color_modify: 'alpha', 0.10
  endif

  comment
    Maximum color brightness is 255
    Change button text color to black if brightness is more than 70.5% ( 70.5% of 255 is ~180 )
    Change button border to match button text color in case button background is the same as the page body background
  endcomment

  comment
    Button colors
  endcomment

  comment
    Primary buttons colors
  endcomment
  assign primary_buttons_color = settings.primary_buttons_color
  assign primary_buttons_alpha_05 = primary_buttons_color | color_modify: 'alpha', 0.05
  assign primary_buttons_alpha_10 = primary_buttons_color | color_modify: 'alpha', 0.10
  assign primary_buttons_alpha_50 = primary_buttons_color | color_modify: 'alpha', 0.50

  assign primary_buttons_color_opposite = primary_buttons_color | color_lighten: 100
  assign primary_buttons_color_contrast = primary_buttons_color | color_contrast: primary_buttons_color_opposite
  if primary_buttons_color_contrast < 2
    assign primary_buttons_color_opposite = primary_buttons_color | color_darken: 100
  endif
  assign primary_buttons_color_alpha_20 = primary_buttons_color_opposite | color_modify: 'alpha', 0.20
  assign primary_buttons_hover = primary_buttons_color_alpha_20

  assign primary_buttons_brightness = primary_buttons_color | color_brightness
  if primary_buttons_brightness > 153
    assign color_primary_buttons_lighten_darken = primary_buttons_color | color_darken: 10
  else
    assign color_primary_buttons_lighten_darken = primary_buttons_color | color_lighten: 10
  endif
  assign color_primary_buttons_lighten_darken_alpha_20 = color_primary_buttons_lighten_darken | color_modify: 'alpha', 0.20
  assign color_primary_buttons_lighten_darken_alpha_30 = color_primary_buttons_lighten_darken | color_modify: 'alpha', 0.30

  if primary_buttons_color == '#000000'
    assign primary_buttons_hover = color_white_alpha_50
  endif

  comment
    Secondary buttons colors
  endcomment
  assign secondary_buttons_color = settings.secondary_buttons_color
  assign secondary_buttons_alpha_05 = secondary_buttons_color | color_modify: 'alpha', 0.05
  assign secondary_buttons_alpha_10 = secondary_buttons_color | color_modify: 'alpha', 0.10
  assign secondary_buttons_alpha_50 = secondary_buttons_color | color_modify: 'alpha', 0.50

  assign secondary_buttons_color_opposite = secondary_buttons_color | color_lighten: 100
  assign secondary_buttons_color_contrast = secondary_buttons_color | color_contrast: secondary_buttons_color_opposite
  if secondary_buttons_color_contrast < 2
    assign secondary_buttons_color_opposite = secondary_buttons_color | color_darken: 100
  endif
  assign secondary_buttons_color_alpha_20 = secondary_buttons_color_opposite | color_modify: 'alpha', 0.20

  assign secondary_buttons_brightness = secondary_buttons_color | color_brightness
  if secondary_buttons_brightness > 153
    assign color_secondary_buttons_lighten_darken = secondary_buttons_color | color_darken: 10
  else
    assign color_secondary_buttons_lighten_darken = secondary_buttons_color | color_lighten: 10
  endif
  assign color_secondary_buttons_lighten_darken_alpha_20 = color_secondary_buttons_lighten_darken | color_modify: 'alpha', 0.20
  assign color_secondary_buttons_lighten_darken_alpha_30 = color_secondary_buttons_lighten_darken | color_modify: 'alpha', 0.30

  comment
    Outline buttons colors
  endcomment

  assign outline_btn_primary_bg_color = 'transparent'
  assign outline_btn_primary_text_color = primary_buttons_color
  assign outline_btn_primary_border_color = primary_buttons_color
  assign outline_btn_primary_bg_hover = color_primary_buttons_lighten_darken_alpha_20

  assign outline_btn_secondary_bg_color = 'transparent'
  assign outline_btn_secondary_text_color = secondary_buttons_color
  assign outline_btn_secondary_border_color = secondary_buttons_color
  assign outline_btn_secondary_bg_hover = color_secondary_buttons_lighten_darken_alpha_20

  assign outline_btn_white_bg_color = 'transparent'
  assign outline_btn_white_text_color = color_white
  assign outline_btn_white_border_color = color_white

  assign outline_btn_black_bg_color = 'transparent'
  assign outline_btn_black_text_color = color_black
  assign outline_btn_black_border_color = color_black

  comment
    Solid buttons with border colors
  endcomment

  assign outline_solid_btn_primary_bg_color = primary_buttons_color
  assign outline_solid_btn_primary_text_color = primary_buttons_color_opposite
  assign outline_solid_btn_primary_border_color = primary_buttons_color_opposite
  assign outline_solid_btn_primary_bg_hover = primary_buttons_color_alpha_20

  assign outline_solid_btn_secondary_bg_color = secondary_buttons_color
  assign outline_solid_btn_secondary_text_color = secondary_buttons_color_opposite
  assign outline_solid_btn_secondary_border_color = secondary_buttons_color_opposite
  assign outline_solid_btn_secondary_bg_hover = secondary_buttons_color_alpha_20

  assign outline_solid_btn_white_bg_color = color_white
  assign outline_solid_btn_white_text_color = color_black
  assign outline_solid_btn_white_border_color = color_black

  assign outline_solid_btn_black_bg_color = color_black
  assign outline_solid_btn_black_text_color = color_white
  assign outline_solid_btn_black_border_color = color_white

  comment
    Border radius
  endcomment

  assign button_style = settings.button_style
  case button_style
    when 'square'
      assign button_border_radius = 0
    when 'rounded'
      assign button_border_radius = 8
    when 'pill'
      assign button_border_radius = 30
  endcase

  assign badge_style = settings.badge_style
  case badge_style
    when 'square'
      assign badge_border_radius = 0
    when 'rounded'
      assign badge_border_radius = 4
    when 'pill'
      assign badge_border_radius = 15
  endcase

  comment
    Line weight & icon width
  endcomment

  assign line_thickness = settings.line_thickness
  case line_thickness
    when 'normal'
      assign border_width = 1
      assign stroke_width = 12
    when 'bold'
      assign border_width = 2
      assign stroke_width = 18
  endcase

  comment
    Grid
  endcomment

  assign columns = settings.products_per_row_on_desktop | plus: 0
  assign columns_tablet = 3

  if columns == 2
    assign columns_tablet = 2
  endif

  comment
    Upsells
  endcomment
  assign upsells_bg_color = settings.upsells_bg_color
  assign upsells_text_color = settings.upsells_text_color

  assign color_upsells_bg = color_body_bg
  if upsells_bg_color != 'rgba(0,0,0,0)' and upsells_bg_color != blank
    assign color_upsells_bg = upsells_bg_color
  endif

  assign color_upsells_text = color_body_text
  assign color_upsells_text_lighten = color_body_text | color_lighten: 20
  assign color_upsells_disabled_grey_darken = color_body_text | color_modify: 'alpha', 0.45
  if upsells_text_color != 'rgba(0,0,0,0)' and upsells_text_color != blank
    assign color_upsells_text = upsells_text_color
    assign color_upsells_text_lighten = upsells_text_color | color_lighten: 20
    assign color_upsells_disabled_grey_darken = upsells_text_color | color_modify: 'alpha', 0.45
  endif
-%}

